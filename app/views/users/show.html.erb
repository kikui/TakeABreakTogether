<div class="box edit">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <p class="error"><%= error %></p>
  <%= form_tag url_for(:controller => 'users', :action => 'update'), method: :put do |form| %>
    <div class="field">
      <%= label_tag :email, nil, class: "label" %>
      <%= text_field_tag :email, @user.email, class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :pseudo, nil, class: "label" %>
      <%= text_field_tag :pseudo, @user.pseudo, class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :current_password, t('profil.current_password'), class: "label" %>
      <%= password_field_tag :current_password, nil,class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :password, t('profil.password'), class: "label" %>
      <%= password_field_tag :password, nil,class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :confirm_password, t('profil.confirm_password'), class: "label" %>
      <%= password_field_tag :confirm_password, nil,class: "input" %>
    </div>
    <div class="actions">
      <%= submit_tag t('profil.submit'), class: "button" %>
    </div>
  <% end %>
</div>